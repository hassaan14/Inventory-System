<div class="card">
  <div class="card-body">
    <%= form_with(model: product, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :item_name, class: "font-weight-bold" %>
        <%= form.text_field :item_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :brand, class: "font-weight-bold" %>
        <%= form.text_field :brand, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :stock, class: "font-weight-bold" %>
        <%= form.text_field :stock, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :price, class: "font-weight-bold" %>
        <%= form.text_field :price, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :description, class: "font-weight-bold" %>
        <%= form.text_field :description, class: "form-control" %>
      </div><br>

      <div class="form-group">
        <%= form.submit  class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
